{
  "name": "My Profile Links",
  "version": "1.0",
  "description": "Keep all your profile links one click away. Supporting LinkedIn, StackOverFlow, GitHub & Web links.",
  "manifest_version": 2,
  "permissions": ["activeTab", "webNavigation", "storage"],
  "background": {
    "scripts": ["background.js", "runtime.js"]
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "24": "assets/icons/icon24.png",
      "32": "assets/icons/icon32.png",
      "64": "assets/icons/icon64.png",
      "128": "assets/icons/icon128.png",
      "256": "assets/icons/icon256.png",
      "512": "assets/icons/icon512.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "24": "assets/icons/icon24.png",
    "32": "assets/icons/icon32.png",
    "64": "assets/icons/icon64.png",
    "128": "assets/icons/icon128.png",
    "256": "assets/icons/icon256.png",
    "512": "assets/icons/icon512.png"
  }
}
